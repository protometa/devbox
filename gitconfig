[core]
	excludesfile = ~/.gitignore
	editor = nvim
[user]
	name = Luke Nimtz
	email = luke.nimtz@gmail.com
[push]
	default = simple
	followTags = true
[alias]
	co = checkout
	br = branch
	ci = commit -v
	st = status -sb
	unadd = reset HEAD --
	lg = log --graph --decorate --format='%C(auto) %h %d %an %cr%n    %s%n'
	ls = log --first-parent --no-merges --format='%C(auto) %h %an %cr  %s  %d'
